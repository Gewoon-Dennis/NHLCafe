@page
@model NHLCafe.Pages.Register

@{
    ViewData["Title"] = "Register page";
}
<body>
<div>
    <div class="container border" style="padding: 20px">
    <form id="register" asp-page-handler="Register">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.NewCafeUser.UserName"></label>
            </div>
            <div class="col-4">
                <input type="text" id="UserName" placeholder="UserName" asp-for="NewCafeUser.UserName"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.NewCafeUser.Password"></label>
            </div>
            <div class="col-4">
                <input type="password" id="Password" placeholder="Password" asp-for="NewCafeUser.Password"/>
            </div>
        </div>
        <div class="form-group row">
            Passwords must contain at least 6 characters
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Confirm Password</label>
            </div>
            <div class="col-4">
                <input type="password" id="confirmPassword" placeholder="Confirm Password" asp-for="PasswordConfirm"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Choose WorkSpace</label>
            </div>
            <div class="col-4">
                <select id="Location" asp-for="NewCafeUser.Location">
                    <option value="Leeuwarden">leeuwarden</option>
                    <option value="Drachten">Drachten</option>
                    <option value="Heerenveen">Heerenveen</option>
                </select>
            </div>
            <div class="from-group row">
                <div class="col-2">
                    <button type="submit">Registreer</button>
                </div>
            </div>
        </div>
    </form>
    </div>
    </div>
    </body>


        @{

            if (@Model.PasswordSame == false)
            {
                <script>alert("Passwords did not match and/or was not long enough!\nPlease try again")</script>;
            }
        }

